<Window x:Class="MhczTBG.Controls.SelectColumns"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="参数选择" Height="300" Width="600" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FFC1E7E7">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="38" />
        </Grid.RowDefinitions>
        <WrapPanel Name="wrapPanel1" Grid.RowSpan="1" />
        <Button Grid.Row="1" Content="确定" Width="50" Height="30" HorizontalAlignment="Right" Click="Button_Click"></Button>
        <CheckBox x:Name="yongjiu" Content="永久保存" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,80,0"></CheckBox>
    </Grid>
</Window>
