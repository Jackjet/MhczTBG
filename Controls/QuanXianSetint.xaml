                                    <Button x:Name="btnCancel" Click="btnCancel_Click" Content="取消" Width="65" Height="25" Margin="10,0" FontSize="12"/>
                                </StackPanel>
                            </Grid>

                        </Grid>
                    </Grid>
                </Border>
            </Border>
        </Border>        
    </Grid>
</UserControl>
