<UserControl x:Class="MhczTBG.Controls.ShiGongManage.TitleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"            
    mc:Ignorable="d" 
    d:DesignHeight="40" d:DesignWidth="324" >
    <UserControl.Resources>
        <LinearGradientBrush Opacity="0.7" x:Key="linear1" EndPoint="1,0.5" StartPoint="0,0.5">
            <GradientStop Color="White" Offset="0"/>
            <GradientStop Color="#FFC0DEFF" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Resources>
    <Grid Height="40" HorizontalAlignment="Stretch" Background="{StaticResource linear1}" >        
		<Border BorderBrush="Silver" BorderThickness="0,0,1,1"/>		
            <TextBlock x:Name="row_txt" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" />		
	</Grid>
</UserControl>
