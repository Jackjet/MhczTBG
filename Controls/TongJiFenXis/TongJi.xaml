    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" Name="borComearch" BorderThickness="1,0,0,1">
     <my1:ComSearch Margin="1" x:FieldModifier="public" x:Name="comSearch" />
           
        </Border>

        <!--<Border  Background="Transparent" PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown" Height="25" Margin="180,35,0,0"/>-->

        <Grid x:Name="gridTJ"  Grid.Row="1" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="10"/>
                <ColumnDefinition />
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1"/>
                <RowDefinition/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!--左边区域-->
            <Grid Name="gridLeft"  Grid.RowSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="0.25,0.25,0.25,0" BorderBrush="Black" Background="{StaticResource linColor1}"   >
                    <ToolTipService.ToolTip >
                        <TextBlock  FontSize="13" VerticalAlignment="Center" Text="直接拖拽以下字段到其他区域"/>
                    </ToolTipService.ToolTip>
                    <!--标题-->
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="字段"/>
                </Border>
                <!--子项-->
                <Border Padding="5,0,5,5" Background="{StaticResource linColor1}" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="0.25" CornerRadius="0,0,10,10" Grid.Row="1">
                    <Border BorderThickness="0.25" BorderBrush="Black">
                        <StackPanel  Background="White" MinHeight="40"  Name="stackPanel1"/>
                    </Border>
                </Border>
            </Grid>

            <!--中间区域-->
            <Grid Name="gridCenter" Grid.RowSpan="4"  Grid.ColumnSpan="2" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="439*" />
                </Grid.RowDefinitions>
                <!--标题-->
                <Border   BorderThickness="0.25,0.25,0.25,0" BorderBrush="Black"  Background="{StaticResource linColor1}">
                    <ToolTipService.ToolTip >
                        <TextBlock Height="30" FontSize="13" VerticalAlignment="Center" Text="直接拖拽以下字段到其他区域"/>
                    </ToolTipService.ToolTip>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Center"  VerticalAlignment="Center" Text="竖轴（"/>
                        <TextBlock Name="txtShuDisplay" HorizontalAlignment="Center" VerticalAlignment="Center" Text="请向此区域拖放"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="）"/>
                    </StackPanel>
                </Border>
                <!--容器-->
                <Border Padding="5,0,5,5" Background="{StaticResource linColor1}" CornerRadius="0,0,10,10" BorderBrush="Black" BorderThickness="0.25" Grid.Row="1">
                    <Border BorderThickness="0.25" BorderBrush="Black">
                        <StackPanel Background="White"   Name="stackPanelRow"/>
                    </Border>
                </Border>
            </Grid>

            <!--右边区域-->
            <Grid Name="gridRight" Grid.RowSpan="4"  Grid.Column="4" Grid.ColumnSpan="3" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition />
                    <RowDefinition />

                </Grid.RowDefinitions>
                <!--标题-->
                <Border  Margin="1,0,0,0" BorderThickness="0.25,0.25,0.25,0" BorderBrush="Black" Background="{StaticResource linColor1}">
                    <ToolTipService.ToolTip >
                        <TextBlock  FontSize="13" VerticalAlignment="Center" Text="直接拖拽以下字段到其他区域"/>
                    </ToolTipService.ToolTip>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Center"  VerticalAlignment="Center" Text="横轴（"/>
                        <TextBlock Name="txtHengDisplay" HorizontalAlignment="Center" VerticalAlignment="Center" Text="请向此区域拖放"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="）"/>
                    </StackPanel>
                </Border>
                <!--容器-->
                <Border Margin="1,0,0,0"  BorderBrush="Black" Background="{StaticResource linColor1}" BorderThickness="0.25" Padding="5,0,5,5" CornerRadius="0,0,10,10"  Grid.Row="1">
                    <Border BorderThickness="0.25" BorderBrush="Black">
                        <StackPanel  Background="White" Name="stackPanelColumn"/>
                    </Border>
                </Border>

                <Grid Grid.Row="2">                    
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="70"/>
                    </Grid.RowDefinitions>

                    <my2:TongJiHelper x:FieldModifier="public" x:Name="tongjiHelper" />                   
                    <Border Grid.Row="1" BorderThickness="0,1,0,0">
                        <!--生成按钮-->
                        <Button  Cursor="Hand" Content="生  成"   HorizontalAlignment="Center" Name="btnInit" Width="278" Height="45" >
                            <ToolTipService.ToolTip>
                                <TextBlock FontSize="13" VerticalAlignment="Center" Text="点击生成"/>
                            </ToolTipService.ToolTip>
                        </Button>
                    </Border>
                    
                </Grid>
            </Grid>
        </Grid>

        <!--dataGrid容器-->
        <Border  Grid.Row="1" Background="White" BorderBrush="Black" BorderThickness="1,0,0,0" Name="bordDataGrid"   Visibility="Collapsed" />

        <!--提示-->
        <Border x:Name="borTip"  Visibility="Collapsed" Grid.Row="1">
              <my3:Loading2  Visibility="Visible"/>          
        </Border>
        
        <!--隐藏按钮-->
        <Button Name="btnChange" Style="{StaticResource btnSyle1}" Margin="-5" Width="35" Height="55" BorderThickness="0" BorderBrush="Transparent" Cursor="Hand"  HorizontalAlignment="Left" Grid.ColumnSpan="2" Grid.RowSpan="4"  Grid.Column="1">
            <Button.ToolTip>
                <TextBlock Text="统计项和表格切换按钮"></TextBlock>
            </Button.ToolTip>
        </Button>
       
    </Grid>
</UserControl>
