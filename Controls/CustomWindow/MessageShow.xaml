<Window x:Class="MhczTBG.Controls.CustomWindow.MessageShow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           WindowStartupLocation="CenterScreen"
           Width="300" Height="130" 
           Title="信息提示" xmlns:ms="http://namespaces.mindscape.co.nz/wpf">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="messageTitle" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0" Text="" ></TextBlock>
        <StackPanel Grid.Row="1" Orientation="Horizontal"  HorizontalAlignment="Right">
            <Button x:Name="OKButton" Content="确定" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,0,10,0" />
            <Button x:Name="CancelButton" Visibility="Collapsed" Content="取消" x:FieldModifier="public" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,0,10,0"  />
        </StackPanel>
    </Grid>
</Window>